*
	box-sizing border-box
.clearfix
	clearfix()
html
	position relative
	height 100%
body
	font 14px "Helvetica Neue", Arial, Helvetica, sans-serif
	line-height 18px
	color #4d4d4d
	font-weight normal
	padding 0
	background-color rgb(0, 121, 191)
	position relative
	height 100%
	margin 0
	clearfix()
*
	box-sizing border-box
a
	text-decoration none
img
	max-width 100%
textarea
	ackground: none;
	border: none;
	box-shadow: none;
	height: auto;
	margin-bottom: 4px;
	max-height: 162px;
	min-height: 54px;
	overflow-y: auto;
	background#e2e4e6
	padding 10px
	transition: background 85ms ease-in,border-color 85ms ease-in;
	width: 100%;
.content
	height 100%
.header
	background rgba(0,0,0,.35)
	overflow hidden
	padding 4px 10px
	z-index 10
	height 32px
	position relative
	display: flex;
	justify-content: space-between;
.header_logo
	max-width 100px
	margin-top -2px
.header_board_position
	overflow hidden
	position fixed
	left 0
	top 36px
	margin-top -10px
	padding: 10px 0;
	z-index 60
.header_board_position_content
	background: #fff
	box-shadow: 0 3px 6px rgba(0,0,0,.4)
	border-radius: 0 3px 3px 0
	width 280px
	padding 10px
	color #8c8c8c
	.button
		color #8c8c8c
.header_title
	color: #fff
	display block
	font-weight 700;
	line-height 25px
	min-width 32px
	padding 0 10px
	text-decoration none
.add_column
	width 270px
	display inline-block
	overflow hidden
	background rgba(255,255,255,0.3)
	box-shadow 1px 1px 1px rgba(0,0,0,.5)
	border-radius 3px
	padding  10px
	vertical-align top
	.board_add_bg
		background white
	.button_bg
		color #0079bf
.add_column:hover
	.board_add_bg:hover
		background #0079bf
		border-radius 3px
	.button_bg:hover
		color white
.input_textarea
	overflow hidden
	word-wrap break-word
	resize none
	heigh: 54px
.board_add:hover
	background #e2e4e6
.button_Close
	background red
	margin-left 10px
	transition .1s ease;
	border-radius 3px
	color: #fff
	display block
	font-weight 700;
	line-height 25px
	min-width 32px
	padding 0 10px
	text-decoration none
	cursor pointer
.button_Close:hover
	background darkred
.board_buttons
	display flex
	.button
		background linear-gradient(to bottom, #61BD4F 0, #5AAC44 100%)
		box-shadow 0 1px 0 #519839
		color #fff
		transition: background .3s ease
	.button:hover
		background darkgreen
.button
	transition .1s ease;
	background hsla(0,0%,100%,.3)
	border-radius 3px
	color: #fff
	display block
	font-weight 700;
	line-height 25px
	min-width 32px
	padding 0 10px
	text-decoration none
	cursor pointer
.button:hover
	background-color hsla(0,0%,100%,.4)
.board
	padding-bottom 8px
.board_card
	border-radius 3px
	height 28px
	padding 0 10px
	text-decoration none
	background #e2e4e6
	color white
	font-size 18px
	display flex
	justify-content space-between
	margin 8px 0
	cursor pointer
	align-items center
.board_card:hover
	background darkgrey
	.board_card-delete
		background-image url(images/delete.png)
		width 16px
		height 16px
	.board_card-delete:hover
		background-image url(images/x-button.png)
.board_card_span
    width 100%
.board_card-delete
	background-image url(images/delete.png)
	width 16px
	height 16px
main
	padding 50px 10px
	overflow-x auto
	overflow-y hidden
	height calc(100% - 32px)
	white-space nowrap
	clearfix()
.desk, .desk-placeholder, .desk-placeholder:hover
	width 270px
	display inline-block
	height 100%
	overflow hidden
	min-height 100px
	background-color #e2e4e6
	box-shadow 1px 1px 1px rgba(0,0,0,.5)
	border-radius 3px
	padding-bottom 20px
	margin-right 20px
	vertical-align top
	.desk-head
		display flex
		position relative
		padding 5px 8px
		margin-bottom 10px
		clearfix()
		.desk-name
			font-weight bold
			white-space normal
			width 100%
		.desk-remove
			cursor pointer
			width 16px
			height 16px
			background-image url(images/icon.png)
		.desk-remove:hover
			background-image url(images/x-button.png)
.desk-items
	overflow-y auto
	height 100%
	padding-bottom 20px
	.placeholder, .placeholder:hover
		height 161px
		background-color rgba(208,208,208,1)
	.board_add_bg
		background transparent
		padding 10px
	.button_bg
		color #8c8c8c
	.board
		padding 10px
	.input_textarea
		background white
	.button_bg:hover
		color #0079bf
.item
	width 90%
	margin 0 auto 10px
	background #fff
	min-height 100px
	border-radius 5px
	box-shadow 1px 1px 1px rgba(0,0,0,.3)
	transition 0.15s
	cursor pointer
	&:hover
		background #f7f7f7
	.item-name
		padding 5px 10px
		border-bottom 1px solid #dbdbdb
		white-space normal
		word-break break-all
		word-wrap break-world
	.item-container
		padding 10px
		clearfix()
		.item-avatar-wrap
			width 70px
			float left
			margin-bottom 5px
			img
				width 50px
				height 50px
				display block
				margin 0 auto
				border-radius 50%
				border 1px solid #dbdbdb
		.item-content
			white-space normal
			.item-author
				font-size 16px
				font-weight bolder
			p
				margin 5px 0
	.item-perfomers
		clearfix()
		padding 5px 10px
		.add-perfomers
			float left
		.delete-perfomers
			float right
		.add-perfomers,
		.delete-perfomers
			a
				display block
				float left
				margin-right 3px
				img
					width 15px
					height 15px
			.perfomer
				float left
				img
					display block
					width 15px
					height 15px
					border-radius 50%
